# Database Configuration
DB_HOST=localhost
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=dh_portfolio
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRE=24h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-at-least-32-characters-long

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (Development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173,http://127.0.0.1:3000

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
CONTACT_EMAIL=contact@yourdomain.com

# AWS Configuration (Required for S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=dh-portfolio-assets
CLOUDFRONT_DOMAIN=your-cloudfront-distribution-domain.cloudfront.net 