# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "dh-portfolio"
environment  = "production"
domain_name  = "daniel-hill.com"

# Instance Types
ec2_instance_type = "t3.micro"
rds_instance_type = "db.t3.micro"

# S3 Configuration
s3_bucket_name = "dh-portfolio-assets"

# Database Configuration
database_password = "your-secure-database-password"

# SSH Key (your public key content)
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC..."

# SSL Certificate ARN (from AWS Certificate Manager)
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/your-certificate-id" 